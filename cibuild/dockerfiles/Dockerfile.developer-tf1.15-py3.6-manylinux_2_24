    mkdir -p /opt/hybridbackend/

COPY --from=DEVEL /opt/hadoop /opt/hadoop
COPY --from=DEVEL /opt/arrow /opt/arrow
COPY --from=DEVEL /opt/sparsehash /opt/sparsehash

RUN pip install \
    tensorflow==1.15.5 \
    numpy==1.16.6 \
    && rm -f /root/.bashrc

